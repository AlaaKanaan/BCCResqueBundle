{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/bccresque/css/bootstrap.min.css') }}" type="text/css" media="screen" />
    <style type="text/css">
        body {
            padding-top: 40px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="{{ path('BCCResqueBundle_homepage') }}">
                BCC Resque
            </a>
            <ul class="nav">
                <li><a href="{{ path('BCCResqueBundle_homepage') }}">Home</a></li>
                <li class="active"><a href="#">Queues</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="container">

    <div class="row">
        <h2 class="span">
            Queues
        </h2>
    </div>
    {% for queue in queues %}
        <div class="row">
            <h3 class="span">
                {{ queue.name }}
            </h3>
        </div>
        <div class="row">
            <div class="span">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="span5">
                            Name
                        </th>
                        <th class="span5">
                            Args
                        </th>
                    </tr>
                    </thead>

                    {% for job in queue.jobs %}
                        <tr>
                            <td>{{ job.name }}</td>
                            <td>
                                <ul class="unstyled">
                                    {% for argname, argvalue in job.args %}
                                        <li>
                                            <strong>{{ argname }}</strong>
                                            <span class="pull-right">{{ argvalue }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">
                                <em>empty...</em>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endfor %}

</div>
{% endblock %}
