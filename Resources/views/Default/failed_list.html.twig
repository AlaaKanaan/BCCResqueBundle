{% extends 'BCCResqueBundle::layout.html.twig' %}

{% block body %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('BCCResqueBundle_homepage') }}">
                    BCC Resque
                </a>
                <ul class="nav">
                    <li><a href="{{ path('BCCResqueBundle_homepage') }}">Home</a></li>
                    <li><a href="{{ path('BCCResqueBundle_queue_list') }}">Queues</a></li>
                    <li><a href="{{ path('BCCResqueBundle_scheduled_list') }}">Scheduled</a></li>
                    <li class="active"><a href="#">Failed jobs</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="row">
            <h2 class="span">
                Failed jobs
            </h2>
        </div>

        <div class="row">
            <div class="span">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="span5">Queue</th>
                        <th class="span5">Failed at</th>
                        <th class="span5">Job</th>
                        <th class="span5">Error</th>
                    </tr>
                    </thead>
                    {% for job in failed %}
                        <tr>
                            <td>{{ job.queueName }}</td>
                            <td>{{ job.failedAt }}</td>
                            <td>{{ job.name }}</td>
                            <td>
                                {{ job.exceptionClass }}<br>
                                {{ job.error }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">
                                <em>empty...</em>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

    </div>
{% endblock %}