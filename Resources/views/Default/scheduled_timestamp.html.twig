{% extends 'BCCResqueBundle::layout.html.twig' %}

{% block body %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('BCCResqueBundle_homepage') }}">
                    BCC Resque
                </a>
                <ul class="nav">
                    <li><a href="{{ path('BCCResqueBundle_homepage') }}">Home</a></li>
                    <li><a href="{{ path('BCCResqueBundle_queue_list') }}">Queues</a></li>
                    <li><a href="{{ path('BCCResqueBundle_scheduled_list') }}">Scheduled</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="span">
                <h2>Jobs Scheduled for {{ timestamp|date('Y-m-d H:i:s') }}</h2>
                <p><a href="{{ path('BCCResqueBundle_scheduled_list') }}">Back to all Scheduled Jobs</a></p>
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="span1">Job</th>
                        <th>Details</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr>
                            <th>{{ loop.index }}</th>
                            <td>
                                <pre>{{ job }}</pre>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
